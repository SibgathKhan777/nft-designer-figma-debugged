# NFT Designer Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001

# =============================================================================
# FIGMA PLUGIN CONFIGURATION
# =============================================================================
FIGMA_PLUGIN_ID=nft-designer
FIGMA_PLUGIN_NAME=NFT Designer
FIGMA_PLUGIN_VERSION=1.0.0

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
BACKEND_URL=http://localhost:3001
CORS_ORIGINS=http://localhost:3000,https://figma.com

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
# Polygon Mumbai Testnet (for development)
POLYGON_MUMBAI_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/N7ISZhjj9D_9X5FiNy4XG"
POLYGON_MUMBAI_CHAIN_ID=80001
POLYGON_MUMBAI_EXPLORER=https://mumbai.polygonscan.com

# Polygon Mainnet (for production)
POLYGON_MAINNET_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/N7ISZhjj9D_9X5FiNy4XG"
POLYGON_MAINNET_CHAIN_ID=137
POLYGON_MAINNET_EXPLORER=https://polygonscan.com

# Contract addresses (will be set after deployment)
CONTRACT_ADDRESS_MUMBAI=
CONTRACT_ADDRESS_MAINNET=

# Private key for contract interactions (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# =============================================================================
# IPFS CONFIGURATION
# =============================================================================
# NFT.Storage (recommended)
NFT_STORAGE_API_KEY=your_nft_storage_api_key_here

# Alternative: Pinata
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# Alternative: Infura
INFURA_IPFS_PROJECT_ID=your_infura_project_id_here
INFURA_IPFS_PROJECT_SECRET=your_infura_project_secret_here

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# OpenAI (recommended)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Alternative: Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# BLOCK EXPLORER API KEYS
# =============================================================================
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# =============================================================================
# WEB SIGNER CONFIGURATION
# =============================================================================
WEB_SIGNER_URL=http://localhost:3000
METAMASK_DETECTION=true

# =============================================================================
# ANALYTICS CONFIGURATION (Optional)
# =============================================================================
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
AMPLITUDE_API_KEY=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_ENHANCEMENT=true
ENABLE_BATCH_MINTING=true
ENABLE_CUSTOM_ATTRIBUTES=true
ENABLE_ANALYTICS=true
ENABLE_COLLECTIONS=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=true
VERBOSE_LOGGING=true
MOCK_BLOCKCHAIN=false
MOCK_AI=false
MOCK_IPFS=false
